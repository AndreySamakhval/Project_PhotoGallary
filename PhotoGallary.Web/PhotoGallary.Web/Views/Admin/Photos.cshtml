
@{
    ViewBag.Title = "Photos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/AdminPhoto.js"></script>

<h2>Manage Photos</h2>
<hr />
<div class="container">
    <div id="divAddGenre">
        <h3>Add New Genre:</h3>
        <input type="text" class="form-control" id="inputNewGenre" placeholder="New Genre"/>
        <p class="text-danger" id="pErrorGenreName"></p>
        <button type="button" class="btn btn-success" id="btnAddGenre">Add Genre</button>
        <hr />
    </div>
    <div id="divShowGenre">
        <h3>Genres:</h3>
        <table class="table-responsive table-striped table-bordered" id="tableGenre">
            <tr>
                <th>Genre</th>
                <th></th>
            </tr>

            </table>
</div>
</div>
<script id="showGenreTmpl" type="text/x-jquery-tmpl">
        <tr id="tr${Id}">
            <td>${Name}</td>
            <td>
                <input type="button" class="btn btn-danger btnDeleteRole" value="Delete" id="${Id}"/>
            </td>
        </tr>
</script>

