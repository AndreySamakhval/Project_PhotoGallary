@model List<PhotoGallary.ViewModel.UserViewModel>

@{
    ViewBag.Title = "Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/Admin.js"></script>

<h2>Manage Users</h2>
<a  id="btnAddUser">Create User  <span class="glyphicon glyphicon-arrow-down"></span></a>

<div class="container">
    <div class="container" id="divAddUser">

        <div class="form-group">
            <input type="text" class="form-control" id="inputName" placeholder="Name" name="Name" style="margin-bottom:10px;" />
        </div>
        <div class="form-group">
            <input type="password" class="form-control" id="inputPassword" placeholder="Password" name="Password" style="margin-bottom:10px;" />
        </div>
        <div class="form-group">
            <input type="password" class="form-control" id="inputConfirmPassword" placeholder="Confirm Password" name="ConfirmPassword" style="margin-bottom:10px;" />
        </div>
        <p class="text-danger" id="errorPassword"></p>
        <div id="divRadio">

        </div>
        <div class="form-group">
            <button type="button" class="btn btn-default" id="btnAddOneUser">Add</button>
        </div>
        <p class="text-success" id="resultCreateUser"></p>

    </div>

</div>
<div class="container">
    <div class="row">
        <div class="col-sm-4">
            <table class="table-responsive table-striped table-bordered" id="tableUsers">
                <tr>
                    <th>Name</th>
                    <th>Roles</th>
                    <th></th>
                    <th></th>
                </tr>
                @foreach (var item in Model)
            {
                    <tr id=@item.Name>
                        <td>@Html.DisplayFor(modelitem => item.Name)</td>
                        <td>@Html.DisplayFor(modelitem => item.Roles)</td>
                        <td><button type="button" class="btn btnEdit" userName="@item.Name">Edit</button></td>
                        <td><button type="button" class="btn btnDelete" userName="@item.Name">Delete</button></td>
                    </tr>
                }
            </table>
        </div>
        <div class="col-sm-4">
            <div class="container" id="divEditUser">
                <label>Edit User:</label><label id="labelUserName"></label>
                <div id="divRadioEdit">
                </div>
                <button type="button" class="btn btn-default" id="btnEditRole">Update Role</button>
            </div>
        </div>
    </div>
</div>

<div class="container" id="divManageRole">
    <hr />
    <h2>Manage Roles</h2>
    <hr />
    <div class="form-group">
        <input type="text" class="form-control" id="inputRoleName" placeholder="Role Name" name="RoleName" style="margin-bottom:10px;" />
        <p class="text-danger" id="pErrorRoleName"></p>
        <button type="button" class="btn btn-info" id="btnAddRole">Add Role</button>
    </div>
    <div id="divCheckRole">
      
    </div>
    <p class="text-danger" id="pErrorRoleCheck"></p>
    <button type="button" class="btn btn-danger" id="btnDeleteRole">Delete Role</button>
    
</div>


<script id="rolesTmpl" type="text/x-jquery-tmpl">
    <div class="radio">
        <label>
            <input type="radio" name="userRole" value=${$data} @*checked*@>
            ${$data}
        </label>
    </div>
</script>

<script id="rolesCheckTmpl" type="text/x-jquery-tmpl">
    <div class="radio checkBoxRole">
        <label>
            <input type="radio" name="checkRole" value=${$data}>
            ${$data}
        </label>
    </div>
</script>